{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Photobooth",
  "version": "1.0.6",
  "identifier": "com.tauri.photobooth",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5174",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "tsc -b && vite build"
  },
  
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Photobooth",
        "focus": true,
        "width": 1000,
        "height": 600,
        "decorations": false,
        "zoomHotkeysEnabled": false
      }
    ],
    
    "security": {
      "csp": null,
      "capabilities": []
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "nsis",
      "msi",
      "app",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "fonts",
      ".env"
    ]
  }
}